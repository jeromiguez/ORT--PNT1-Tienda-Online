@model CompanyManager.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="form-container">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mt-4">
            <label asp-for="Email" class="control-label fw-bold fs-5 mb-1">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger fs-6"></span>
        </div>

        <div class="mt-2 form-group">
            <label asp-for="Password" class="control-label fw-bold fs-5 mb-1">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger fs-6"></span>
        </div>

        <div class="mt-2">
            <span>¿Aún no tienes una cuenta?</span>
            <a asp-action="Register" class="text-danger">Registrarse</a>
        </div>

        <input class="btn btn-danger mt-4 w-100"  type="submit" value="Iniciar sesión" />
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}