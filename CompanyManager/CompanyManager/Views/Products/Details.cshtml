@model CompanyManager.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-10">
            % @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            $ @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            <form asp-controller="Stocks" asp-action="Index">
                <input type="hidden" name="Id" asp-for="Id" />
                <button type="submit" class="btn btn-link p-0 text-danger">@Html.DisplayNameFor(model => model.Stock)</button>
            </form>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-2">
            <form asp-controller="Sales" asp-action="Index">
                <input type="hidden" name="Id" asp-for="Id" />
                <button type="submit" class="btn btn-link p-0 text-danger">@Html.DisplayNameFor(model => model.SoldItems)</button>
            </form>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoldItems)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index" class="text-danger">Volver</a>
</div>
